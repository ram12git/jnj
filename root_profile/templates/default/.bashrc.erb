# .bashrc

## DO NOT EDIT THIS FILE. PUPPET MANAGES THIS FILE SO ANY MODIFICATIONS
## OUTSIDE OF PUPPET WILL BE OVERWRITTEN.

# User specific aliases and functions

alias rm='rm -i'
alias cp='cp -i'
alias mv='mv -i'

# Source global definitions
if [ -f /etc/bashrc ]; then
    . /etc/bashrc
fi
# Create separate history file for sudo users
USER=$(whoami)  # probably unneeded, USER is set in /etc/profile
if [ "$RUSER" = "" ]; then
  PARID=$(</proc/$$/loginuid)
  RUSER=$(getent passwd $PARID | awk -F: '{print $1}')
else
  HISTSIZE=1000
  HISTFILE=$HOME/.histdir/$USER.$RUSER.$(date +%Y%m%d-%H%M%S)
  HOST=$(uname -n); HOST=${HOST%%.*}
  PS1='[$USER@$HOST:$PWD]#\n#-> '

  export USER HISTSIZE HISTFILE RUSER HOST PS1
fi
#Correct broken command line editing
shopt -s checkwinsize